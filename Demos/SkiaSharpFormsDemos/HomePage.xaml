<?xml version="1.0" encoding="utf-8" ?>
<local:HomeBasePage xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:SkiaSharpFormsDemos"
                    xmlns:sk="clr-namespace:TheArtOfDev.HtmlRenderer.WinForms;assembly=HtmlRenderer.NetStandard2.XamarinForms"
                    x:Class="SkiaSharpFormsDemos.HomePage"
                    Title="SkiaSharp Forms Demos"
                    Padding="10">
    <TableView Intent="Menu">
        <TableRoot>
            <TableSection>
                <TextCell Text="SkiaSharp Drawing Basics"
                          Detail="Learn basic graphics concepts and coordinates"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:Basics.BasicsHomePage}" />

                <TextCell Text="SkiaSharp Lines and Path"
                          Detail="Use SkiaSharp to draw lines and graphics paths"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:Paths.PathsHomePage}" />

                <TextCell Text="SkiaSharp Transforms"
                          Detail="Learn about transforms for modifying graphics"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:Transforms.TransformsHomePage}" />

                <TextCell Text="SkiaSharp Curves and Paths"
                          Detail="Discover how to draw curves and use path features"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:Curves.CurvesHomePage}" />

                <TextCell Text="SkiaSharp Bitmaps"
                          Detail="Create, draw on, save, and animate bitmaps"                          
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:Bitmaps.BitmapsHomePage}" />

                <TextCell Text="SkiaSharp Effects"
                          Detail="Use gradients, bitmap tiling, blur, and drop shadow"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:Effects.EffectsHomePage}" />

            </TableSection>
        </TableRoot>
    </TableView>
</local:HomeBasePage>